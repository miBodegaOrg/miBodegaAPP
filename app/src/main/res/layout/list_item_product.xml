<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_productName_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="fill_vertical"
                android:text="LECHE GLORIA SIX PACK"
                android:textAlignment="center"
                android:textColor="@color/md_theme_light_shadow"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/Tv_productCode_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_regular"
                android:gravity="fill_vertical"
                android:text="sku: 1236845"
                android:textColor="@color/design_default_color_primary"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Imv_productImage_product"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/backgroun_custom_rectangle"
                android:backgroundTint="@color/md_theme_dark_inverseSurface"
                android:padding="10dp"
                app:srcCompat="@drawable/harina" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Tv_productStock_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stock: 50"
                        android:textAlignment="viewStart"
                        android:textColor="@color/md_theme_dark_shadow" />

                    <TextView
                        android:id="@+id/Tv_productState_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estado: ACTIVO"
                        android:textColor="@color/md_theme_dark_shadow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nivel de venta:" />

                    <TextView
                        android:id="@+id/Tv_productLevel_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ALTA" />

                </LinearLayout>

                <TextView
                    android:id="@+id/Tv_buyPriceProduct_product"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="S/ 100.00 P. COMPRA" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn_supplierProduct_product"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.19"
                android:background="@drawable/backgroun_custom_rectangle"
                android:text="Proveedor"
                app:icon="@drawable/baseline_local_shipping_24"
                app:iconPadding="1dp" />

            <Button
                android:id="@+id/Btn_detailProduct_product"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.19"
                android:background="@drawable/backgroun_custom_rectangle"
                android:text="Detalles"
                app:icon="@drawable/baseline_list_alt_24"
                app:iconPadding="1dp" />

            <TextView
                android:id="@+id/Tv_sellPriceProduct_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="S/.  270.00"
                android:textColor="@color/md_theme_dark_errorContainer"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#000000"
                android:endColor="#268793"
                android:angle="45" />
        </shape>
    </item>
    <item
        android:bottom="200dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-80dp">
        <shape android:shape="oval">
            <solid android:color="#4DFFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="-100dp"
        android:left="200dp"
        android:right="-200dp"
        android:top="150dp">
        <shape android:shape="oval">
            <solid android:color="#3DFFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="250dp"
        android:left="150dp"
        android:right="-200dp"
        android:top="-150dp">
        <shape android:shape="rectangle">
            <solid android:color="#2DFFFFFF" />
            <corners android:radius="150dp" />
            <rotation
                android:fromDegrees="45"
                android:pivotX="50%"
                android:pivotY="50%" />
        </shape>
    </item>
</layer-list>